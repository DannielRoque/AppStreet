<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_pagamentos"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_pagamentos_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Blusa Infantil"/>

            <TextView
                android:id="@+id/item_pagamento_nome_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/item_pagamentos_descricao"
                app:layout_constraintTop_toBottomOf="@+id/item_pagamentos_descricao"
                app:layout_constraintEnd_toEndOf="@id/item_pagamentos_descricao"
                tools:text="Maria do rosÃ¡rio"/>

            <TextView
                android:id="@+id/item_pagamento_valor_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@id/item_pagamento_nome_cliente"
                app:layout_constraintEnd_toEndOf="@id/item_pagamento_nome_cliente"
                app:layout_constraintTop_toBottomOf="@id/item_pagamento_nome_cliente"
                tools:text="24,90"/>

            <TextView
                android:id="@+id/parcela_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="Parcela (s):"
                app:layout_constraintTop_toBottomOf="@id/item_pagamento_valor_produto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_pagamentos_parcelas"/>

            <TextView
                android:id="@+id/item_pagamentos_parcelas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/parcela_descricao"
                app:layout_constraintTop_toTopOf="@id/parcela_descricao"
                app:layout_constraintBottom_toBottomOf="@id/parcela_descricao"
                app:layout_constraintEnd_toStartOf="@id/quantidade_descricao"
                tools:text="5"/>

            <TextView
                android:id="@+id/quantidade_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:text="Qtd (s):"
                app:layout_constraintStart_toEndOf="@id/item_pagamentos_parcelas"
                app:layout_constraintTop_toTopOf="@id/item_pagamentos_parcelas"
                app:layout_constraintBottom_toBottomOf="@id/item_pagamentos_parcelas"
                app:layout_constraintEnd_toStartOf="@id/item_pagamento_quantidade"/>

            <TextView
                android:id="@+id/item_pagamento_quantidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/quantidade_descricao"
                app:layout_constraintTop_toTopOf="@id/quantidade_descricao"
                app:layout_constraintBottom_toBottomOf="@id/quantidade_descricao"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>